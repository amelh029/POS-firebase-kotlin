<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bd_dialog_fragment"
    app:cardBackgroundColor="@color/purple_200"
    app:cardCornerRadius="@dimen/MMargin"
    app:cardElevation="@dimen/MMargin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/baseMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_am_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Name "
            android:textSize="@dimen/LLText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/baseMargin"
            android:layout_marginBottom="@dimen/baseMargin"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text=""
            android:textSize="@dimen/LText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_am_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/LMargin"
            android:layout_marginEnd="@dimen/LMargin"
            android:layout_gravity="center"
            app:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/MMargin"
            android:text="Siap"/>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>