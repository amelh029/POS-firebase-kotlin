<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:maxHeight="60dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="@dimen/RvLine"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/MMargin">

        <TextView
            android:id="@+id/tv_rv_sm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Wardrobe"
            android:textSize="@dimen/MText"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_rv_pm_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rv_sm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="+375290123456" />

        <TextView
            android:id="@+id/tv_rv_sm_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="just address what you know about what is inside" />

        <TextView
            android:id="@+id/tv_rv_sm_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In this category, coffee is presented in the form of servings for each option." />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
